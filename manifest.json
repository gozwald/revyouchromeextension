{
  "name": "Revyou",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Revyou Maaaadness",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["inject.js", "materialize.js"],
      "css": ["materialize.css", "style.css"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": {
    "default_title": "Revyou"
  },
  "permissions": ["https://*/*", "http://*/*", "tabs"]
}
